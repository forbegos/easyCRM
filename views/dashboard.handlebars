    <div>
      <div class="row">

        
          <div class="col col-6">
            <h4>Current Leads</h4>
            <table class="table table-info table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Description</th>
                  <th scope="col">Total Hours</th>
                  <th scope="col">Revenue</th>

                  <th scope="col">Client</th>
                  <th scope="col">Owner</th>
                </tr>
              </thead>
              <tbody>
                   {{#each leads as |lead|}}
                <tr class= "table-row" onclick="document.location = 'http://www.google.com';">
                  <td>{{lead.id}}</td>
                  <td>{{lead.description}}</td>
                  <td>{{lead.hours}} hrs.</td>
                  <td>${{lead.revenue}}</td>
                  <td>{{lead.client.name}}</td>
                  <td>{{lead.user.username}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          
          <div class="col col-6">
             <h4>Pending Tasks</h4>
            <table class="table table-success table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Task</th>
                  <th scope="col">Date Created</th>
                  <th scope="col">Owner</th>

                  <th scope="col">Client</th>
                </tr>
              </thead>
              <tbody>
                   {{#each tasks as |task|}}
                <tr class= "table-row"  onclick="document.location = 'http://www.google.com';">
                  <td>{{task.id}}</td>
                  <td>{{task.content}}</td>
                  <td>{{format_date date}}</td>
                  <td>{{task.user.username}}</td>
                  <td>{{task.client.name}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
      </div>
